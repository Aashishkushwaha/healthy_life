                        <script>
									function validate()
									{
										alert("here");
										var name=document.getElementById('name');
										var email=document.appointment.email;
										var contact=document.appointment.contact;
										var e_con=document.appointment.contact;
										//echo "inside validate<br><br>";
										if(name.value == '')
										{
											alert('Please enter name ');
											name.focus();
											return false;
										}
										else
										if(!(/^[a-zA-Z ]+$/.test(name.value)))
										{
											alert('Please characters only');
											name.focus();
											return false;
										}
										else
										if(name.value.length > 30)
										{
											alert('Max 30 characters only');
											name.focus();
											return false;
										}
										else if(email.value == '')
										{
											alert('Please enter email ');
											email.focus();
											return false;
										}
										else
										if(!(/^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}+?\.[a-zA-Z]{2,3}$/.test(email.value)))
										{
											alert('please enter valid email address');
											email.focus();
											return false;
										}
										else if(contact.value == '')
										{
											alert('Please enter contact ');
											contact.focus();
											return false;
										}
									return true;
							}
					</script>
